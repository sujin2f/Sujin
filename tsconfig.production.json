{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "jsx": "react",
        "outDir": "./build",
        "removeComments": true,
        "strict": true,
        "rootDirs": ["src/server"],
        "baseUrl": "./",
        "paths": {
            "src/*": ["src/*"]
        },
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths"
            }
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "dom.iterable", "esnext"]
    },
    "include": ["src/server/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
