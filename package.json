{
    "name": "sujin",
    "version": "10.0.0",
    "description": "WordPress theme for sujinc.com",
    "license": "MIT",
    "scripts": {
        "arson": "yarn lint & yarn test",
        "tsc": "ttsc --project tsconfig.production.json",
        "start": "NODE_ENV=development concurrently --kill-others-on-fail \"yarn dev:node\" \"yarn dev:react\"",
        "dev:node": "NODE_ENV=development ts-node-dev --compiler ttypescript --respawn ./src/server/app.ts",
        "dev:react": "NODE_ENV=development webpack --watch",
        "prod": "NODE_ENV=production node build/server/app.js",
        "build": "yarn tsc & yarn build:react",
        "build:react": "NODE_ENV=production webpack",
        "lint": "eslint '*/**/*.{js,ts,tsx}'",
        "test": "NODE_ENV=test jest"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.5",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "express-graphql": "^0.12.0",
        "express-session": "^1.17.1",
        "foundation-sites": "^6.6.3",
        "mysql": "^2.18.1",
        "graphql": "^15.5.0",
        "path": "^0.12.7",
        "php-unserialize": "^0.0.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.1",
        "swagger-ui-express": "^4.1.4",
        "webpack": "^4.42.0"
    },
    "devDependencies": {
        "@apollo/client": "^3.3.15",
        "@testing-library/jest-dom": "^5.11.0",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^12.0.11",
        "@types/cookie-parser": "^1.4.2",
        "@types/ejs": "^3.0.6",
        "@types/express": "^4.17.7",
        "@types/express-session": "^1.17.0",
        "@types/jest": "^26.0.4",
        "@types/mysql": "^2.15.18",
        "@types/node": "^14.0.22",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "@types/react-router-dom": "^5.1.5",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "babel-jest": "^26.1.0",
        "concurrently": "^5.2.0",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.3",
        "jest": "^26.1.0",
        "node-sass": "^4.14.1",
        "prettier": "^2.0.5",
        "promise-mysql": "^5.0.3",
        "react": "^16.13.1",
        "supertest": "^4.0.2",
        "ts-jest": "^26.1.3",
        "ts-node-dev": "^1.0.0-pre.50",
        "ttypescript": "^1.5.10",
        "typescript": "^3.9.6",
        "webpack-cli": "^3.3.12"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "arrowParens": "always",
        "bracketSpacing": true,
        "endOfLine": "lf",
        "printWidth": 80,
        "proseWrap": "preserve",
        "quoteProps": "as-needed",
        "semi": false,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false
    }
}
