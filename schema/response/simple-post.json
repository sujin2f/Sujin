{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://sujinc.com/simple-post.json",
  "title": "simple post",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique ID",
      "type": "number",
      "readonly": true
    },
    "slug": {
      "description": "Post slug",
      "type": "string",
      "readonly": true
    },
    "title": {
      "description": "Title",
      "type": "string",
      "readonly": true
    },
    "excerpt": {
      "description": "Excerpt",
      "type": "string",
      "readonly": true
    },
    "date": {
      "description": "Date",
      "type": "string",
      "format": "date",
      "readonly": true
    },
    "link": {
      "description": "Link URL",
      "type": "string",
      "format": "uri",
      "readonly": true
    },
    "tags": {
      "description": "Tags",
      "type": "array",
      "items": {
        "$ref": "term.json"
      },
      "readonly": true
    },
    "thumbnail": {
      "$ref": "image.json"
    },
    "meta": {
      "description": "Meta data",
      "type": "object",
      "properties": {
        "background" : {
          "$ref": "image.json"
        },
        "icon" : {
          "$ref": "image.json"
        },
        "list" : {
          "$ref": "image.json"
        },
        "title" : {
          "$ref": "image.json"
        },
        "thumbnail" : {
          "$ref": "image.json"
        },
        "backgroundColor": {
          "type": "string",
          "pattern": "^#[0-9A-Z]{6}$"
        },
        "useBackgroundColor": {
          "type": "boolean"
        }
      },
      "readonly": true,
      "additionalProperties":false
    }
  },
  "required": ["id", "slug", "date", "link", "title"],
  "additionalProperties":false
}
