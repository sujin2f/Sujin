{
  "$schema": "http://json-schema.org/schema#",
  "title": "post",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique ID",
      "type": "number",
      "readonly": true
    },
    "slug": {
      "description": "Post slug",
      "type": "string",
      "readonly": true
    },
    "date": {
      "description": "Date",
      "type": "string",
      "format": "date",
      "readonly": true
    },
    "link": {
      "description": "Link URL",
      "type": "string",
      "format": "uri",
      "readonly": true
    },
    "title": {
      "description": "Title",
      "type": "string",
      "readonly": true
    },
    "meta": {
      "description": "Meta data",
      "type": "object",
      "properties": {
        "background" : {
          "$ref": "images"
        },
        "icon" : {
          "$ref": "images"
        },
        "list" : {
          "$ref": "images"
        },
        "title" : {
          "$ref": "images"
        },
        "thumbnail" : {
          "$ref": "images"
        },
        "backgroundColor": {
          "type": "string",
          "pattern": "^#[0-9A-Z]{6}$"
        },
        "useBackgroundColor": {
          "type": "boolean"
        }
      },
      "readonly": true
    },
    "thumbnail": {
      "$ref": "images"
    }
  }
}
