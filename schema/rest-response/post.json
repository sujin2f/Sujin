{
  "$schema": "http://json-schema.org/schema#",
  "title": "post",
  "type": "object",
  "allOf": [
    {
      "$ref": "simple-post"
    }
  ],
  "properties": {
    "content": {
      "description": "Content",
      "type": "string",
      "readonly": true
    },
    "excerpt": {
      "description": "Excerpt",
      "type": "string",
      "readonly": true
    },
    "commentStatus": {
      "description": "Comment status",
      "type": "boolean",
      "readonly": true
    },
    "tags": {
      "description": "Tags",
      "type": "array",
      "items": {
        "$ref": "tag"
      },
      "readonly": true
    },
    "series": {
      "description": "Series",
      "type": "array",
        "items": {
          "$ref": "simple-post"
        },
      "readonly": true
    },
    "prevNext": {
      "description": "Prev / Next",
      "type": "object",
      "properties": {
        'prev': {
          "$ref": "simple-post"
        },
        'next': {
          "$ref": "simple-post"
        }
      }
      "readonly": true
    },
    "related": {
      "description": "Related contents",
      "type": "array",
      "readonly": true
    },
    "type": {
      "description": "Post Type",
      "type": "string",
      "enum": [
        "post",
        "page"
      ],
      "readonly": true
    }
  }
}
