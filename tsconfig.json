{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [ "dom", "dom.iterable", "es2015.promise", "es5" ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "esnext",
    "outDir": "./dist/",
    "paths": {
      "app/*": ["app/*"]
    },
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": ["node_modues"],
  "include": ["./app/app.d.ts"]
}
